{
  "name": "recipe-app",
  "version": "1.0.0",
  "description": "A CRUD application for managing recipes",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "cd frontend && npm install && npm run build",
    "postinstall": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test-api": "node test-api.js",
    "test-db": "node test-db-connection.js",
    "test-deploy": "node test-api-deployment.js",
    "frontend": "cd frontend && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run frontend\""
  },
  "keywords": [
    "nodejs",
    "express",
    "mongoose",
    "recipes",
    "crud"
  ],
  "author": "Meghavarshny <meghavarshny2004@gmail.com>",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.11.0",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  }
}
